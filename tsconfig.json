{
  "compilerOptions": {
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "strict": true,
    "target": "ES2020",
    "module": "ES2020",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@event-sorcerer/*": [
        "./packages/*/src/main"
      ]
    }
  },
  "include": [
    "./*",
    "./packages/*/src/main/**/*"
  ]
}
